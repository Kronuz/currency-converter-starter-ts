{
    "extends": [
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-plugin-prettier"
    ],
    "rules": {
        "member-access": true,
        "member-ordering": [
            true,
            "variables-before-functions",
            "public-before-private"
        ],
        "class-name": true,
        "jsdoc-format": true,
        "forin": true,
        "jsx-boolean-value": [
            true,
            "never"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ]
    }
}
